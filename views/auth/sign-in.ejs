<!-- Sign-In Route - logs in an existing user -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  </head>
  <body>

    <!-- Bulma Inspired Sign In Page -->

    <section class="section">
      <div class="container">
        <h1 class="title has-text-centered">Sign In</h1>

        <form action="/auth/sign-in" method="POST" class="box" style="max-width: 400px; margin: 0 auto;">
          <div class="field">
            <label class="label" for="username">Username</label>
            <div class="control">
              <input class="input" type="text" name="username" id="username" required>
            </div>
          </div>

          <div class="field">
            <label class="label" for="password">Password</label>
            <div class="control">
              <input class="input" type="password" name="password" id="password" required>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <button class="button is-info is-fullwidth" type="submit">Existing User - Sign In</button>
            </div>
          </div>
        </form>

        <br>

        <div class="has-text-centered">
          <a href="/">⬅︎ Back to Homepage</a>
        </div>
      </div>
    </section>


    <!-- Another alternate version of sign in - I like the first one above better. -->
    <section class="section">
      <div class="container">
        <h1 class="title has-text-centered">Sign In</h1>

        <form action="/auth/sign-in" method="POST">
          <input class="input mb-3" type="text" name="username" placeholder="Username" required>
          <input class="input mb-4" type="password" name="password" placeholder="Password" required>
          <button class="button is-primary is-fullwidth">Sign In</button>
        </form>

        <div class="has-text-centered mt-4">
          <a href="/">⬅︎ Back to Homepage</a>
        </div>
      </div>
    </section>

  </body>
</html>
