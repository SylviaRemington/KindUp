<!-- INDEX PAGE TEMPLATE / DISPLAY ALL KIND ACTS -->
 <!-- index-of-kind-acts -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index of Kind Acts</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
    <h1>All Kind Acts</h1>
    <p><b>Click on a kind act to read about it or update/delete a kind act you've created!</b><p>

    <ul>
        <% kindacts.forEach(kindact => { %>
            <li><a href="/kindacts/<%= kindact._id %>"><%= kindact.title %></a></li>
            <!-- adding dynamic link above for showpage -->
        <% }); %>
    </ul>  
    
    <br>

    <!-- LINKS TO APP PAGES -->
    <a href="/kindacts/new">⬅︎ Add New Kind Act</a> <br>
    <a href="/">⬅︎ Back to Homepage</a>

</body>
</html>